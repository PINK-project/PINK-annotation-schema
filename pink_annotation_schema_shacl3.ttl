:PinkAnnotationSchemaShape
  a shacl:NodeShape ;
  shacl:targetClass dcat:Dataset ; # All datasets are validated according to this Schema. 

  # --- Mandatory: license ---
  # Note: dcterms:license is often an IRI to a License resource.
  # If you truly want a string literal, keep datatype; otherwise use nodeKind IRI.
  shacl:property [
    shacl:path dcterms:license ;
    shacl:datatype xsd:string ;           # or replace with: shacl:nodeKind shacl:IRI ;
    shacl:minCount 1 ;
    shacl:maxCount 1 ;
    shacl:message "Datasets must specify a license." ;
  ] ;

  # --- Recommended: modified date (soft requirement) ---
  shacl:property [
    shacl:path dcterms:modified ;
    shacl:datatype xsd:dateTime ;         # or xsd:date
    shacl:minCount 1 ;
    shacl:severity shacl:Info ;
    shacl:message "It is recommended to add the date of modification. Can be the same as creation date if never modified." ;
  ] ;

  # --- Optional: identifier ---
  shacl:property [
    shacl:path dcterms:identifier ;
    shacl:datatype xsd:string ;
    # shacl:minCount 0 ;  # optional; 0 is the default
    shacl:message "Additional identifier to the IRI." ;
  ] ;

  # Be careful with closed shapes: this disallows any properties not listed above.
  shacl:closed false ;
  shacl:ignoredProperties ( rdf:type ) .

